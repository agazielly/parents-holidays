<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= @bookings.first.location%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="d-flex">
     <div class="left-side row d-flex justify-content-around">
      <% @bookings.each do |booking| %>
        <%= link_to governess_path(booking.governess_id) do %>
          <div class="cards-bookings">
            <!-- img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" /> -->
            <%= image_tag User.where(id: booking.governess.id).first.picture %>
            <div class="card-bookings-infos">
            <h2><%=   User.where(id: booking.governess.id).first.firstname.capitalize %> <%=   User.where(id: booking.governess.id).first.lastname.capitalize %></h2>
            <p><%= booking.location%></p>
            <p id= "price"><%= booking.total_price%> €</p>
            <button name="button" type="" class="btn btn-flat"><i class=""></i>Edit</button>
            <button name="button" type="" class="btn btn-secondary"><i class=""></i>Cancel</button>
          </div>
        </div>
      <% end %>
    <%end%>
        </div>
    </div>
      <div class="modal-footer">
         <% price = [] %>
        <p>Total price = <% @bookings.each do |booking| %>
          <% price << booking.total_price %>
          <% end %>
          <%= price.sum %> €
        </p>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
  </div>
</div>
