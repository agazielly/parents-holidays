<div class="container container-show mt-5">
  <div class="book">
    <%= link_to "Back", governesses_path, class: "btn btn-secondary" %>
  </div>
  <div class="card-trip" data-aos="fade-right" data-aos-duration="1750">
    <%= image_tag 'fond profil.jpg' %>
    <div class="card-trip-infos">
      <%= image_tag @governess.user.picture, class:"card-trip-user avatar-bordered" %>
      <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> -->
      <div class="name">
        <h1>
          <%= @governess.user.firstname %>
          <%= @governess.user.lastname %>
        </h1>
      </div>
      <h2 class="card-trip-pricing">
        <%=@governess.price%>â‚¬/jour</h2>
    </div>
    <div class="card-trip-infos2">
      <div class="localisation">
        <h2>Localisation</h2>
        <p>
          <%=@governess.location%>
        </p>
      </div>
      <div class="">
        <h2>Description</h2>
        <p>
          <%= @governess.description %>
        </p>
      </div class="chat">
      <%= image_tag 'chat.png', class: "img-style2", data: {toggle: "tooltip", placement: "top"}, title: "Send a Message" %>
    </div>
  </div>
  <div class="card-trip1" data-aos="fade-left" data-aos-duration="1750">
    <div class="mamad-flex">
      <div class="img-style-effect" data-aos="fade-left" data-aos-duration="1000">
        <%= image_tag 'certif.png', class: "img-style", data: {toggle: "tooltip", placement: "top"}, title: "Certification" %>
      </div>
      <div class="img-style-effect" data-aos="fade-left" data-aos-duration="1500">
        <%= image_tag 'menage.png', class: "img-style", data: {toggle: "tooltip", placement: "top"}, title: "Household" %>
      </div>
      <div class="img-style-effect" data-aos="fade-left" data-aos-duration="2000">
        <%= image_tag 'cuisine.png', class: "img-style", data: {toggle: "tooltip", placement: "top"}, title: "Cooking" %>
      </div>
      <div class="img-style-effect" data-aos="fade-left" data-aos-duration="2500">
        <%= image_tag 'bÃ©bÃ©.png', class: "img-style", data: {toggle: "tooltip", placement: "top"}, title: "Baby accepted" %>
      </div>
    </div>
    <%# Calendar %>
    <div class="container container-calendar">
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <h2>Make your Reservation</h2>
        <%= simple_form_for :search, method: "get" do |f| %>
        <%= f.input "Check-in/Out", as: :string, placeholder: "Select Date..",required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, "Book now", class: "btn btn-flat-calendar alert_booking" %>
        <% end %>

        <div id="show_alert" class="flash flash-success alert alert-dismissible fade show d-none" role="alert">
          <span><strong>Yay!</strong> ðŸŽ‰ you successfully booked your location with <%= @governess.user.firstname %></span>
          <a data-dismiss="alert" aria-label="Close">
            <i class="fas fa-times"></i>
          </a>
        </div>

      </div>
    </div>
  </div>
</div>
</div>