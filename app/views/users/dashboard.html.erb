<div class="container">
  <ul class="list-inline tabs-underlined">
    <li>
      <a href="#" class="tab-underlined active">My trips</a>
    </li>
    <li>
      <a href="#" class="tab-underlined">Past trips</a>
    </li>
    <li>
      <a href="#" class="tab-underlined">My missions</a>
    </li>
    <li>
      <a href="#" class="tab-underlined">Messages</a>
    </li>
  </ul>

  <div class="cards-journey">
    <% @locations.each do |location, bookings| %>
      <%#= link_to booking_path(booking) do %>
      <button class="cards-journey-button" type="button" data-toggle="modal" data-target="#modal-<%=bookings.first.location%>">
        <div class="card-journey-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= Unsplash::Photo.search(location).first.urls.full %>)">
          <%= location %>
        </div>
      </button>
      <%= render 'shared/modal-trip', bookings: bookings, location: location %>
    <% end %>
  </div>
</div>

